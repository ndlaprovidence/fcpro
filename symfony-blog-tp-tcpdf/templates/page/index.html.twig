{% extends 'base.html.twig' %}

{% block title %}Page index{% endblock %}

{% block body %}
    <h1>Liste des pages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for page in pages %}
            <tr>
                <td>{{ page.id }}</td>
                <td>{{ page.title }}</td>
                <td>
                    <a class="btn btn-secondary btn-sm" href="{{ path('app_page_show', {'id': page.id}) }}"><i class="fa-solid fa-eye"></i></a>
                    <a class="btn btn-warning btn-sm" href="{{ path('app_page_edit', {'id': page.id}) }}"><i class="fa-solid fa-pen"></i></a>
                    {{ include('page/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">Il n'y a aucune page !</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_page_new') }}"><i class="fa-solid fa-plus"></i> Nouvelle page</a>
{% endblock %}

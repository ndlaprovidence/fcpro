{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    
 
    <a class="btn btn-primary" href="{{ path('app_user_edit', {'id': user.id}) }}"><i class="fa-solid fa-floppy-disk"></i> {{'edit'|trans}}</a><br><br>
    <a class="btn btn-secondary" href="{{ path('app_user_index') }}"><i class="fa-regular fa-circle-left"></i> {{'back to list'|trans}}</a>
    <div align="right">
    {{ include('user/_delete_form.html.twig') }}
    </div>
{% endblock %}
